<Window x:Class="MyMovies.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="My movies" Height="439" Width="650">
    <Grid>
        <Label Content="Folders to scan (one per line)" Height="28" HorizontalAlignment="Left" Name="label1" VerticalAlignment="Top" Margin="12,0,0,0" />
        <TextBox Height="104" Margin="12,25,12,0" Name="tbDirectories" VerticalAlignment="Top" Text="c:\torrent" AcceptsReturn="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
        <Button Content="Start scan" Height="23" Margin="12,135,12,0" Name="button1" VerticalAlignment="Top" Click="button1_Click" />
        <TextBox Margin="12,191,12,12" Name="tbLog" IsReadOnly="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" UndoLimit="0" />
        <Button Height="23" Margin="12,163,12,0" Name="btWeb" VerticalAlignment="Top" Click="btWeb_Click" />
    </Grid>
</Window>
